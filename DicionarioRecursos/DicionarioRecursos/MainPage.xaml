<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DicionarioRecursos.MainPage"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <StackLayout Padding="20" Spacing="15"
                 VerticalOptions="Center"
                 HorizontalOptions="Center">

        <Label Text="Bem-vindo ao Theme Code!"
               Style="{DynamicResource LargeLabelStyle}"
               HorizontalOptions="Center" />

        <Label Text="Teste os temas na próxima tela."
               Style="{DynamicResource SmallLabelStyle}"
               HorizontalOptions="Center" />

        <Button Text="Ir para Configurações de Tema"
                Style="{DynamicResource PrimaryButtonStyle}"
                Clicked="btnConfigTemaClicked" />
    </StackLayout>
</ContentPage>
